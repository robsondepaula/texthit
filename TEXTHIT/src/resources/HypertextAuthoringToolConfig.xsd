<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            elementFormDefault="qualified">
    
    <xsd:element name="toolConfig" type="ToolConfigType" />
    
    <xsd:element name="EmptyIsUnacceptable" type="requiredString"/>
    <xsd:simpleType name="requiredString">
        <xsd:restriction base="xsd:string">
            <xsd:minLength value="1"/>
        </xsd:restriction>
    </xsd:simpleType>
    
    <xsd:complexType name="ToolConfigType">
        <xsd:sequence>
            <xsd:element name="publisherServerIPAddress" type="requiredString" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="publisherServerLogin" type="requiredString" minOccurs="1" maxOccurs="1"/>
            <xsd:element name="publisherServerPath" type="requiredString" minOccurs="1" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>  
</xsd:schema>